<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ewubd.studenthelper">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.StudentHelper">
        <activity android:name=".Home_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".about_us"/>
        <activity android:name=".ProfileActivity"/>
        <activity android:name="add_review_activity"/>
        <activity android:name=".view_review_activity"/>
        <activity android:name=".add_course_activity"/>
        <activity android:name=".add_exam_activity"/>
        <activity android:name=".add_semester_activity"/>
        <activity android:name=".FlowchartActivity"/>
        <activity android:name=".FlowchartZoomedActivity"/>
        <activity android:name=".CalendarActivity"/>
        <activity android:name=".CGPACalcActivity"/>
        <activity android:name=".schedule_activity"/>

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>